<!-- Config file for the game -->

<config>
  <app framerate_cap ="30">
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="750" height="420" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <volume default="80"/>
  </audio>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
    <initial_map value ="0"/>
    <background r ="60" g="240" b="225"/>
    <map directory ="testbed.tmx"/>
    <map directory ="map1.tmx"/>
    <map directory ="map2.tmx"/>
  </map>

  <Entities>
    <properties>
      <Player type ="0">
        <property value = "22"   name ="width"/>
        <property value = "45"   name ="height"/>
        <property value = "3"    name ="lifes"/>
        <property value = "10"   name="jump_accel"/>
        <property value = "2"    name="ground_accel"/>
        <property value = "4"    name ="velocity"/>
        <property value = "0.45" name ="gravity"/>
        <property value = "5.3"  name ="hability"/>
      </Player>
      <Bat type ="1">
        <property value="30"    name ="width"/>
        <property value="28"    name ="height"/>
        <property value="1"     name ="lifes"/>
        <property value="2"     name ="ground_accel"/>
        <property value="4"     name ="velocity"/>
        <property value="0.0"   name ="gravity"/>
      </Bat>
    </properties>
    <textures>
      <tex path ="textures/PilotSprites.png" for ="player"/>
      <tex path="textures/Bat.png" for ="bat"/>
    </textures>
  </Entities>
  
  <collision>
    <debug value ="false"/>
  </collision>

</config>